
{{#if addNewAnswer}}
    <form>
      <div>
        <label>Your name</label>
        {{input value=author}}
      </div>

      <div>
        <label>Answer</label>
        {{input value=answerBody}}
      </div>

      <button class="btn btn-success" {{action 'saveAnswer'}}>Submit</button>
      <button class="btn btn-success" {{action 'hideAForm'}}>Cancel</button>
    </form>
  {{else}}
    <button class="btn btn-success leftindent" {{action 'newAnswer'}}>Add Answer</button>
{{/if}}
