
{{#if addNewQuestion}}
    <form>
      <div>
        <label>Question</label>
        {{input value=quest}}
      </div>

      <div>
        <label>Your name</label>
        {{input value=author}}
      </div>

      <div>
        <label>Additional Notes</label>
        {{input value=notes}}
      </div>

      <button class="btn btn-success" {{action 'saveQuestion'}}>Ask</button>
      <button class="btn btn-success" {{action 'hideQForm'}}>Cancel</button>
    </form>
  {{else}}
    <button class="btn btn-success center-block" {{action 'newQuestion'}}>New Question</button>
{{/if}}
